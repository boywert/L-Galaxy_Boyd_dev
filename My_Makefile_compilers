# List of compilers and flags.

# Default set
ifeq (PARALLEL,$(findstring PARALLEL,$(OPT)))
CC       =   mpicc 
else
CC       =   gcc
endif
CC_MD    = gcc  
ifeq (DEBUG,$(findstring DEBUG,$(OPT)))
OPTIMIZE =   -g -Wall
else
OPTIMIZE = -O3                  # optimization
endif

GSL_INCL = -I${GSL_INCL}
GSL_LIBS = -L${GSL_LIBS}
